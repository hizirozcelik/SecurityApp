@page
@model SecurityApp.Pages.Account.LoginModel
@{
}

<div class="container border p-2 m-0">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.Name"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="text" asp-for="Credential.Name" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="password" asp-for="Credential.Password" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">

            </div>
        </div>


    </form>
</div>
